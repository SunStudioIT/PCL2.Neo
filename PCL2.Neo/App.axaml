<Application
    RequestedThemeVariant="Default"
    x:Class="PCL2.Neo.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="using:PCL2.Neo"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://PCL2.Neo/Assets/Language/zh-CN.axaml" />
                <ResourceInclude Source="avares://PCL2.Neo/Colors.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="Pcl2English">avares://PCL2.Neo/Assets/Font.ttf#PCL English</FontFamily>

        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://PCL2.Neo/Styles/MyControlStyles.axaml" />
        <StyleInclude Source="avares://PCL2.Neo/Styles/CustomStyles.axaml" />

    </Application.Styles>
</Application>
