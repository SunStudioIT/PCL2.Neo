<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="using:PCL2.Neo.Controls.MyMsg"
    xmlns:pc="using:PCL2.Neo.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <controls:MyMsgText />
    </Design.PreviewWith>

    <Style Selector="controls|MyMsgText">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid
                    HorizontalAlignment="Center"
                    Margin="25"
                    MinWidth="400"
                    RenderTransformOrigin="0%,50%"
                    UseLayoutRounding="True"
                    VerticalAlignment="Center">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Border
                        Background="{DynamicResource ColorBrushMsgBox}"
                        CornerRadius="7"
                        Name="PanBorder">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Color="{DynamicResource ColorObject1}"
                                OffsetX="0"
                                OffsetY="2"
                                Opacity="0.8" />
                        </Border.Effect>
                        <Grid
                            Margin="22,22,22,23"
                            Name="PanMain"
                            VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2" />
                                <RowDefinition Height="13" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="23"
                                Foreground="{DynamicResource ColorBrush2}"
                                Grid.Row="0"
                                HorizontalAlignment="Left"
                                Margin="7,-1,70,9"
                                Name="LabTitle"
                                Text="测试标题文本"
                                TextTrimming="None"
                                UseLayoutRounding="False"
                                VerticalAlignment="Top" />
                            <Rectangle
                                Fill="{Binding Foreground, ElementName=LabTitle}"
                                Grid.Row="1"
                                Height="2"
                                x:Name="ShapeLine" />
                            <ScrollViewer
                                Grid.Row="3"
                                HorizontalScrollBarVisibility="Disabled"
                                Margin="0,0,0,17"
                                Padding="7,0,15,0"
                                VerticalAlignment="Top"
                                VerticalScrollBarVisibility="Auto"
                                x:Name="PanCaption">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Normal"
                                    Foreground="{DynamicResource ColorBrushMsgBoxText}"
                                    LineHeight="18"
                                    Name="LabCaption"
                                    Padding="1"
                                    Text="这是 PCL2.Neo，不是原版 PCL2!"
                                    TextTrimming="None"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Top" />
                            </ScrollViewer>
                            <StackPanel
                                Grid.Row="4"
                                HorizontalAlignment="Right"
                                Margin="150,0,8,0"
                                Name="PanBtn"
                                Orientation="Horizontal"
                                VerticalAlignment="Top">
                                <pc:MyButton
                                    ColorType="Normal"
                                    Margin="12,0,0,0"
                                    Name="Btn1"
                                    Padding="5,0"
                                    Text="测试按钮1"
                                    TextPadding="7"
                                    UseLayoutRounding="False"
                                    x:FieldModifier="public" />
                                <pc:MyButton
                                    ColorType="Normal"
                                    Margin="12,0,0,0"
                                    Name="Btn2"
                                    Padding="5,0"
                                    Text="测试按钮2"
                                    TextPadding="7"
                                    UseLayoutRounding="False"
                                    x:FieldModifier="public" />
                                <pc:MyButton
                                    ColorType="Normal"
                                    Margin="12,0,0,0"
                                    Name="Btn3"
                                    Padding="5,0"
                                    Text="测试按钮3"
                                    TextPadding="7"
                                    UseLayoutRounding="False"
                                    x:FieldModifier="public" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>

